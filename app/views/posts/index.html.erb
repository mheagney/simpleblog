<div class="flex justify-between">
  <h3 class="text-2xl">Posts</h3>
  <% if current_user %>
    <%= link_to "Create Post", new_post_path, class: "inline-flex items-center rounded-md border border-transparent bg-blue-600 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  <% end %>
</div>
<%= turbo_frame_tag "posts" do %>
  <ul role="list" class="mt-8 space-y-3">
    <% if @posts.empty? %>
      <li class="overflow-hidden rounded-md bg-white px-6 py-4 shadow">
        No posts yet!
      </li>
    <% else %>
      <%= render @posts %>
    <% end %>
  </ul>
<% end %>
